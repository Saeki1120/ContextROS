%--------------------------------------------------
% ページを囲む線
%--------------------------------------------------
% textwidthを線からのマージン分だけ縮めておく
\addtolength\textwidth{-2\textsep}
\def\@outputpage{%
\begingroup % the \endgroup is put in by \aftergroup
  \iftdir
    \dimen\z@\textwidth \textwidth\textheight \textheight\dimen\z@
  \fi
  \let \protect \noexpand
  \@resetactivechars
  \global\let\@@if@newlist\if@newlist
  \global\@newlistfalse
  \@parboxrestore
  % テキストは横幅を広げたboxに格納（縦線との間に隙間が入る）
  \setbox\@outputbox\vbox{%
    \@tempdima=\wd\@outputbox%
    \addtolength\@tempdima{2\textsep}
    \setbox\@tempboxa=\hbox to\@tempdima{%
      \hfil%
      \hbox to\textwidth{\box\@outputbox}%
      \hfil%
    }%
    \box\@tempboxa
  }
  % textwidthを元に戻す
  \addtolength\textwidth{2\textsep}
  % 出力
  \shipout\vbox{\yoko
    \set@typeset@protect
    \aftergroup\endgroup
    \aftergroup\set@typeset@protect
     \if@specialpage
       \global\@specialpagefalse\@nameuse{ps@\@specialstyle}%
     \fi
     \@@topmargin\topmargin
     \reset@font
     \normalsize
     \normalsfcodes
     \let\label\@gobble
     \let\index\@gobble
     \let\glossary\@gobble
     \baselineskip\z@skip \lineskip\z@skip \lineskiplimit\z@
    \@begindvi
    \vskip \@@topmargin
    \moveright\@themargin\hbox{%
      \vrule\hfill% 左の縦線
      \vbox{%
        \setbox\@tempboxa \vbox to\headheight{%
          \vfil
          \color@hbox
          \normalcolor
          \hb@xt@\textwidth{\@thehead}%
          \color@endbox
        }%                        %% 22 Feb 87
        \hrule% ヘッダ上の横線
        \dp\@tempboxa \z@
        \box\@tempboxa
        \hrule% ヘッダ下の横線
        \vskip \headsep
        \box\@outputbox%
        \vbox to\footskip{\vfill}
        \hrule% フッタ上の横線
      }%
      \hfill\vrule% 右の縦線
    }%
    \moveright\@themargin\vbox{%
      \vbox to\baselineskip{\vfill}
      \color@hbox
      \normalcolor
      \hb@xt@\textwidth{\@thefoot}%
      \color@endbox
    }%
  }%
  \global\let\if@newlist\@@if@newlist
  \global \@colht \textheight
  \stepcounter{page}%
  \let\firstmark\botmark
}
